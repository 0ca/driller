+
+            if (read(ifd, fbuf, st.st_size) != st.st_size) PFATAL("read");
+
+            common_fuzz_stuff(use_argv, fbuf, st.st_size);
+
+            close(ifd);
+            ck_free(fbuf);
+            ck_free(file_path);
+        } 
+
+        closedir(dfd);
+    }
